    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --dh-blue: #0066CC;
            --dh-blue-dark: #004C99;
            --dh-gray-100: #F8F9FA;
            --dh-gray-800: #343A40;
        }
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            color: #212529;
            line-height: 1.6;
            padding-top: 0;
        }
        h1, h2, h3, h4 {
            font-family: 'Merriweather', 'Georgia', serif;
            font-weight: 700;
        }
        .navbar-brand {
            font-family: 'Merriweather', serif;
            font-weight: 700;
            font-size: 1.5rem;
        }
        .hero-section {
            background: linear-gradient(135deg, var(--dh-blue) 0%, var(--dh-blue-dark) 100%);
            color: white;
            padding: 4rem 0;
        }
        .card {
            border: 1px solid rgba(0,0,0,0.125);
            border-radius: 0.5rem;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        }
        .key-finding {
            border-left: 4px solid var(--dh-blue);
            background-color: var(--dh-gray-100);
            padding: 1.25rem;
            margin: 1.5rem 0;
        }
        .methodology-box {
            background-color: #FFF8DC;
            border: 1px solid #FFE082;
            border-radius: 0.5rem;
            padding: 2rem;
        }
        .metric-badge {
            background: var(--dh-blue);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-size: 0.9rem;
            font-weight: 600;
        }
        .btn-primary {
            background-color: var(--dh-blue);
            border-color: var(--dh-blue);
            padding: 0.75rem 1.75rem;
            font-weight: 600;
        }
        .btn-primary:hover {
            background-color: var(--dh-blue-dark);
            border-color: var(--dh-blue-dark);
        }
        footer {
            border-top: 1px solid #dee2e6;
        }
        .breadcrumb {
            background: transparent;
            padding: 0.75rem 0;
            margin-bottom: 1.5rem;
        }
        .content-container {
            min-height: 60vh;
        }
    </style>
    {% block extra_css %}{% endblock %}
</head>
